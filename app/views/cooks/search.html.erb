<h1>検索結果</h1>

<table>
    <thead>
        <tr>
            <th><%= sort_link(@q, :id, "ID", default_order: :desc ) %></th>
            <th><%= sort_link(@q, :name, "料理名", default_order: :desc) %></th>
            <th>作る際のポイント</th>
            <th>料理の写真</th>
            <th><%= sort_link(@q, :time, "料理のかかった時間", default_order: :desc) %></th>
            <th>対象者</th>
            <th>料理の分類</th>
            <th>詳細</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
    </thead>

    <tbody>
        <% @results.each do |cook| %>
            <tr>
                <td><%= cook.id %></td>
                <td><%= cook.name %></td>
                <td><%= cook.point %></td>
                <td><img src="<%= cook.image %>" class="cook-image"></td>
                <td><%= cook.time %></td>
                <td><%= cook.target_people %></td>
                <td><%= cook.target_cook %></td>
                <td><%= link_to "詳細", cook %></td>
                <td><%= link_to "編集", edit_cook_path(cook) %></td>
                <td><%= link_to "削除", cook, method: :delete, date: { confirm:'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to '料理一覧表に戻る', cooks_path %>

<%= link_to 'トップページに戻る', home_page_path %>