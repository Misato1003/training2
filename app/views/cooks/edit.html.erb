<h3>料理の編集</h3>

<!--バリデーション-->
<%= render "shared/error", obj:@cook %>

<%= form_with model:@cook do |f| %>
    <table>
        <tr>
            <th><%= f.label :name, '料理の名前' %></th>
            <td><%= f.text_area :name %></td>
        </tr>
        <tr>
            <th><%= f.label :image, '料理の写真' %></th>
            <td> <img src="<%= @cook.image %>" class="cook-image"><br>
                 <%= f.file_field :image %>
            </td>
        </tr>
        <tr>
            <th><%= f.label :point, '料理の作る際のポイント' %></th>
            <td><%= f.text_area :point %></td>
        </tr>
        <tr>
            <th><%= f.label :ingredient, '料理の材料' %></th>
            <td><%= f.text_area :ingredient %></td>
        </tr>
        <tr>
            <th><%= f.label :recipe, '料理の作り方' %></th>
            <td><%= f.text_area :recipe %></td>
        </tr>
        <tr>
            <th><%= f.label :time, '料理にかかった時間' %></th>
            <td><%= f.text_field :time %></td>
        </tr>
        <tr>
            <th><%= f.label :target_people, '対象者' %></th>
            <td><%= f.radio_button(:target_people, "指定なし") %>指定なし
                <%= f.radio_button(:target_people, "子供") %>子供
                <%= f.radio_button(:target_people, "学生") %>学生
                <%= f.radio_button(:target_people, "社会人") %>社会人
                <%= f.radio_button(:target_people, "主婦") %>主婦
                <%= f.radio_button(:target_people, "一人暮らし") %>一人暮らし
                <%= f.radio_button(:target_people, "老人") %>老人
            </td>
        </tr>
        <tr>
            <th><%= f.label :target_cook, '料理の分類' %></th>
            <td><%= f.radio_button(:target_cook, "指定なし") %>指定なし
                <%= f.radio_button(:target_cook, "肉類") %>肉類
                <%= f.radio_button(:target_cook, "魚類") %>魚類
                <%= f.radio_button(:target_cook, "卵") %>卵
                <%= f.radio_button(:target_cook, "洋風") %>洋風
                <%= f.radio_button(:target_cook, "和風") %>和風
                <%= f.radio_button(:target_cook, "中華") %>中華
            </td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "編集を完了する" %></li>
            <li><%= link_to "料理の情報一覧表に戻る", cooks_path %></li>
        </ul>
    </div>
<% end %>
